@{

}
@model SpeedModel

@using (Html.BeginForm("Calculate", "Speed", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.MetersPerSecond)
        @Html.TextBoxFor(m => m.MetersPerSecond)
        <input type="submit" value="Calculate" />
    </div>
}

@if (ViewBag.SpeedResult != null)
{
    <div>
        <h4>Speed in km/h:</h4>
        <p>@ViewBag.SpeedResult</p>
    </div>
}
